<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="fill_parent" android:orientation="vertical"
	android:background="@drawable/layout_bg" android:layout_width="fill_parent" android:gravity="center">

	<LinearLayout android:layout_marginTop="10dp"
		android:layout_gravity="center_horizontal" android:layout_width="wrap_content"
		android:layout_height="wrap_content">

		<kankan.wheel.widget.WheelView
			android:id="@+id/pin_0" android:layout_height="wrap_content"
			android:layout_width="wrap_content" />
		<kankan.wheel.widget.WheelView
			android:id="@+id/pin_1" android:layout_height="wrap_content"
			android:layout_width="wrap_content" />
		<kankan.wheel.widget.WheelView
			android:id="@+id/pin_2" android:layout_height="wrap_content"
			android:layout_width="wrap_content" />
		<kankan.wheel.widget.WheelView
			android:id="@+id/pin_3" android:layout_height="wrap_content"
			android:layout_width="wrap_content" />

		<LinearLayout android:layout_height="wrap_content"
			android:layout_width="fill_parent" android:id="@+id/linearLayout1"
			android:orientation="vertical" android:layout_gravity="center_vertical" >
			
			<Button android:id="@+id/btn_random" android:layout_height="wrap_content"
				android:layout_gravity="center_horizontal" android:layout_marginTop="12dp"
				android:textSize="18sp" android:text="@string/randomize"
				android:layout_width="fill_parent" />
				
		</LinearLayout>

	</LinearLayout>

</LinearLayout>
